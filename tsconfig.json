{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2015",
      "ES2015.Promise",
      "esnext"
    ],
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "allowJs": true,
    "baseUrl": ".",
    "typeRoots": ["./src",  "./node_modules/@types"],
    "moduleResolution": "Node"
  },
  "include": [
    "src"
  ]
}
